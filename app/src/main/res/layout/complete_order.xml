<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="2">


    <LinearLayout
        android:id="@+id/two"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_marginEnd="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        android:background="@drawable/bg_round_rect"
        android:gravity="center"
        android:text="Tab"
        android:textColor="#9b92b3"
        android:textStyle="bold">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Current Order: "
            android:textSize="20dp"
            android:textColor="#ffffff"/>

        <!-- need to add a recycle list view -->

        <!-- A RecyclerView with some commonly used attributes -->
        <android.support.v7.widget.RecyclerView
            android:id="@+id/orderListView"
            android:scrollbars="vertical"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>


        <TextView
            android:id="@+id/orderListHeading"
            android:text="Current Order Contents"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/one"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_weight="1"
        android:weightSum="2"
        android:background="#404040"
        android:gravity="center"
        android:text="Tab"
        android:textColor="#9b92b3"
        android:textStyle="bold">

        <LinearLayout
            android:id="@+id/saveOrder"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginEnd="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:background="@drawable/bg_round_save_order"
            android:gravity="center"
            android:text="Tab"
            android:textColor="#9b92b3"
            android:textStyle="bold">

            <Button
                android:id="@+id/btnSaveOrder"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="Save Order"
                android:background="#000000"
                android:padding="15dp"
                android:layout_margin="15dp"
                android:textColor="#9b9b9b"/>

            <Button
                android:id="@+id/btnClear"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="Clear Order"
                android:background="#000000"
                android:padding="15dp"
                android:layout_margin="15dp"
                android:textColor="#9b9b9b"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/placeOrder"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginEnd="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:background="@drawable/bg_round_place_order"
            android:gravity="center"
            android:text="Tab"
            android:textColor="#9b92b3"
            android:textStyle="bold">

            <Button
                android:id="@+id/btnPlaceOrder"
                android:text="Place Order"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:background="#000000"
                android:padding="15dp"
                android:layout_margin="15dp"
                android:textColor="#9b9b9b"/>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>