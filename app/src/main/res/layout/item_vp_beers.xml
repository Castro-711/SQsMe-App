<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="4">

   <include layout="@layout/drink_holder"
       android:id="@+id/cheiftain"/>

    // no. 2 --> Frame

    <LinearLayout
        android:id="@+id/two"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginEnd="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        android:background="@drawable/bg_round_rect"
        android:gravity="center"
        android:text="Tab"
        android:textColor="#9b92b3"
        android:textStyle="bold">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/bg_round_rect"
            android:gravity="center"
            android:src="@mipmap/ic_coors"
            android:textColor="#9b92b3"
            android:textStyle="bold"/>


        // no 1.1 --> Text
        <LinearLayout
            android:id="@+id/in_two_name"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_marginEnd="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:background="@drawable/bg_round_rect"
            android:gravity="center"
            android:text="Tab"
            android:textColor="#9b92b3"
            android:textStyle="bold">

            // no. 1.2 --> Text

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_round_rect"
                    android:gravity="left"
                    android:text="Coors"
                    android:textSize="16dp"
                    android:textColor="#ffffff"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/coors_quantity"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:textColor="#ffffff"
                    android:text="x. 0"/>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="500ml"
                android:textStyle="italic"
                android:textColor="#dddddd"
                android:gravity="left"/>

            // no. 1.3 --> Buttons

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/removeCoors"
                    android:text="x"
                    android:textSize="20dp"
                    android:textColor="#ff0000"
                    android:background="@drawable/bg_round_rect"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />


                <Button
                    android:id="@+id/addCoors"
                    android:text="+"
                    android:textSize="30dp"
                    android:textColor="#00ff00"
                    android:background="@drawable/bg_round_rect"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    // no. 3
    // no. 2 --> Frame

    <LinearLayout
        android:id="@+id/three"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginEnd="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        android:background="@drawable/bg_round_rect"
        android:gravity="center"
        android:text="Tab"
        android:textColor="#9b92b3"
        android:textStyle="bold">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/bg_round_rect"
            android:gravity="center"
            android:src="@mipmap/ic_heineken"
            android:textColor="#9b92b3"
            android:textStyle="bold"/>


        // no 1.1 --> Text
        <LinearLayout
            android:id="@+id/heineken_name"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_marginEnd="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:background="@drawable/bg_round_rect"
            android:gravity="center"
            android:text="Tab"
            android:textColor="#9b92b3"
            android:textStyle="bold">

            // no. 1.2 --> Text

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_round_rect"
                    android:gravity="left"
                    android:text="Heineken"
                    android:textSize="16dp"
                    android:textColor="#ffffff"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/heineken_quantity"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:textColor="#ffffff"
                    android:text="x. 0"/>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="500ml"
                android:textStyle="italic"
                android:textColor="#dddddd"
                android:gravity="left"/>

            // no. 1.3 --> Buttons

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/removeHeineken"
                    android:text="x"
                    android:textSize="20dp"
                    android:textColor="#ff0000"
                    android:background="@drawable/bg_round_rect"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />


                <Button
                    android:id="@+id/addHeineken"
                    android:text="+"
                    android:textSize="30dp"
                    android:textColor="#00ff00"
                    android:background="@drawable/bg_round_rect"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    // no. 4

    // no. 2 --> Frame

    <LinearLayout
        android:id="@+id/four"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginEnd="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        android:background="@drawable/bg_round_rect"
        android:gravity="center"
        android:text="Tab"
        android:textColor="#9b92b3"
        android:textStyle="bold">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/bg_round_rect"
            android:gravity="center"
            android:src="@mipmap/ic_tuborg"
            android:textColor="#9b92b3"
            android:textStyle="bold"/>


        // no 1.1 --> Text
        <LinearLayout
            android:id="@+id/tuborg"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_marginEnd="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:background="@drawable/bg_round_rect"
            android:gravity="center"
            android:text="Tab"
            android:textColor="#9b92b3"
            android:textStyle="bold">

            // no. 1.2 --> Text

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_round_rect"
                    android:gravity="left"
                    android:text="Tuborg"
                    android:textSize="16dp"
                    android:textColor="#ffffff"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/tuborg_quantity"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:textColor="#ffffff"
                    android:text="x. 0"/>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="500ml"
                android:textStyle="italic"
                android:textColor="#dddddd"
                android:gravity="left"/>

            // no. 1.3 --> Buttons

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/removeTuborg"
                    android:text="x"
                    android:textSize="20dp"
                    android:textColor="#ff0000"
                    android:background="@drawable/bg_round_rect"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />


                <Button
                    android:id="@+id/addTuborg"
                    android:text="+"
                    android:textSize="30dp"
                    android:textColor="#00ff00"
                    android:background="@drawable/bg_round_rect"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>


</LinearLayout>