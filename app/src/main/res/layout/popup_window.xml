<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:fadingEdge="vertical"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10sp"
        android:background="#6A6A6A"
        android:orientation="vertical">

        <TextView
            android:id="@+id/pubName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20sp"
            android:backgroundTintMode="screen"
            android:fadingEdge="horizontal"
            android:gravity="center"
            android:text="The Roost"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
            android:textColor="#ffffff"
            android:textSize="30sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/pubImage"
            android:layout_width="match_parent"
            android:layout_height="100sp"
            android:layout_marginTop="20sp"
            android:src="@mipmap/the_roost" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="65sp"
            android:gravity="center"
            android:orientation="horizontal">


            <RatingBar
                android:id="@+id/ratingBar"
                style="?android:attr/ratingBarStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:isIndicator="true"
                android:numStars="5"
                android:progressBackgroundTint="#ffffff"
                android:progressTint="#FDB306"
                android:stepSize="0.2" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/openStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="monospace"
                android:gravity="center"
                android:layout_marginTop="5sp"
                android:text="OPEN"
                android:textColor="#00ff00"
                android:textSize="27sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="128dp"
            android:layout_marginTop="20sp"
            android:layout_marginHorizontal="15sp"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/imgDrinkMenu"
                android:layout_width="80sp"
                android:layout_height="100sp"
                android:background="#6A6A6A"
                android:foreground="@mipmap/beer_menu" />

            <ImageButton
                android:id="@+id/imgPubWeb"
                android:layout_width="80sp"
                android:layout_height="100sp"
                android:layout_marginHorizontal="20sp"
                android:background="#6A6A6A"
                android:foreground="@mipmap/web_white_ic" />

            <ImageButton
                android:id="@+id/imgPubFacebook"
                android:layout_width="80sp"
                android:layout_height="100sp"
                android:background="#6A6A6A"
                android:foreground="@mipmap/fb_icon" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>